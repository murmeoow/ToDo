<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/tasksListFragment">

    <fragment
        android:id="@+id/tasksListFragment"
        android:name="com.example.taskmanager.ui.TasksListFragment"
        android:label="Tasks"
        tools:layout="@layout/fragment_tasks_list" >
        <action
            android:id="@+id/action_tasksListFragment_to_newTaskFragment"
            app:destination="@id/newTaskFragment" />
    </fragment>
    <fragment
        android:id="@+id/habbitsFragment"
        android:name="com.example.taskmanager.ui.HabitsFragment"
        android:label="Habits"
        tools:layout="@layout/fragment_habbits">
        <action
            android:id="@+id/action_habbitsFragment_to_newHabitFragment"
            app:destination="@id/newHabitFragment" />
    </fragment>
    <fragment
        android:id="@+id/newTaskFragment"
        android:name="com.example.taskmanager.NewTaskFragment"
        android:label="Add task"
        tools:layout="@layout/fragment_new_task" >
        <action
            android:id="@+id/action_newTaskFragment_to_tasksListFragment"
            app:destination="@id/tasksListFragment" />
    </fragment>
    <fragment
        android:id="@+id/newHabitFragment"
        android:name="com.example.taskmanager.NewHabitFragment"
        android:label="Add habit"
        tools:layout="@layout/fragment_new_habit" >
        <action
            android:id="@+id/action_newHabitFragment_to_habbitsFragment"
            app:destination="@id/habbitsFragment" />
    </fragment>
</navigation>